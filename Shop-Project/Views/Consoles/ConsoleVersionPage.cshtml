@model IEnumerable<GroupGameConsole>@{ ViewData["Title"] = "GroupBy";}@{ var model = Model.FirstOrDefault();    var id = model.ConsoleId;    }<br /><br /><form asp-action="ConsoleSearch" class="text-center text-sm-left ">    <a class="nav justify-content-center">        <input name="id" value="@id" hidden/>        <input name="searchId" placeholder="search.." />        <input type="submit" value="Search" class="btn btn-dark dbtnc marginLeft10" />    </a></form>@if (model.Name != null)
{<div id="gameList" class="container mt-3">    <div class="row">        @foreach (var item in Model)
        {<div class="col-3 p-1">    <div class="card">        <a href="@Url.Action("Details", "ConsoleVersions", new { id = item.Id })">            <img class="btn card-img-top" style="height:220px" src="@Html.DisplayFor(modelItem => item.Image)" alt="Card image">        </a>        <div class="card-body">            <h4 class="card-title textsize14">@Html.DisplayFor(modelItem => item.Name)</h4>            <p class="card-text textsize12 text-center"><b>@Html.DisplayFor(modelItem => item.Price)</b></p>            <a class="btn btn-primary dbtnc" asp-controller="ConsoleVersions" asp-action="Details" asp-route-id="@item.Id">More Details</a>            <a href="#" data-name="@item.Name" data-price="@item.Price" class="add-to-cart btn btn-dark dbtnc">Add to cart</a>        </div>    </div></div>}    </div></div>}<!-- Modal --><div class="modal fade" id="cart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">    <div class="modal-dialog modal-lg" role="document">        <div class="modal-content">            <div class="modal-header">                <h5 class="modal-title" id="exampleModalLabel">Cart</h5>                <button type="button" class="close" data-dismiss="modal" aria-label="Close">                    <span aria-hidden="true">&times;</span>                </button>            </div>            <div class="modal-body">                <table class="show-cart table">                </table>                <div>Total price: $<span class="total-cart"></span></div>            </div>            <div class="modal-footer">                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>                <button type="button" class="btn btn-primary">Order now</button>            </div>        </div>    </div></div><style>    .detailbtncolor {        border-color: #B7D153;        background-color: #90ac0a;        display: block;        left: 50%;    }        .detailbtncolor:hover {            border-color: #90ac0a;            background-color: #B7D153;            color: #000000;        }    .textsize14 {        font-size: 14px;        font-weight: bold;    }    .textsize12 {        font-size: 12px;    }    .mycontainer {        width: 100%;    }</style>