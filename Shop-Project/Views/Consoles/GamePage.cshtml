@model IEnumerable<GroupGameConsole>@{ ViewData["Title"] = "GroupBy";}@foreach (var group in Model){<div class="card mycard" style="width:200px">    <a href="@Url.Action("Details","Games",new { id = group.Id })">        <img class="btn card-img-top" style="height:220px" src="@Html.DisplayFor(modelItem => group.Image)" alt="Card image">    </a>    <div class="card-body">        <h4 class="card-title textsize14">@Html.DisplayFor(modelItem => group.Name)</h4>        <p class="card-text textsize12 text-center"><b>@Html.DisplayFor(modelItem => group.Price)</b></p>        <a class="btn btn-primary detailbtncolor" asp-controller="Games" asp-action="Details" asp-route-id="@group.Id">More Details</a>    </div></div> }<style>    .detailbtncolor {        border-color: #B7D153;        background-color: #90ac0a;        display: block;        left: 50%;    }        .detailbtncolor:hover {            border-color: #90ac0a;            background-color: #B7D153;            color: #000000;        }    .textsize14 {        font-size: 14px;        font-weight: bold;    }    .textsize12 {        font-size: 12px;    }    .mycontainer {        width: 100%;    }    .mycard {        background: none;        display: inline-block;    }</style>