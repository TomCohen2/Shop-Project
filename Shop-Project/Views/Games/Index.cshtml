@model IEnumerable<Shop_Project.Models.Game>

@{
    ViewData["Title"] = "Index";
}


<h4 class="white">Games in stock</h4>

<p class="white">
    <a asp-action="Create">Create New Product</a>
</p>
<body>

    @foreach (var item in Model)
    {
        <div class="card mycard" style="width:200px"  >
             
            <a href="@Url.Action("Details","Games",new { id = item.Id })">
                <img class="btn card-img-top" style="height:220px" src="@Html.DisplayFor(modelItem => item.Image)" alt="Card image">
            </a>
            <div class="card-body">
                <h4 class="card-title textsize14">@Html.DisplayFor(modelItem => item.Name)</h4>
                <p class="card-text textsize10">for: @Html.DisplayFor(modelItem => item.Console.Name)</p>
                <a class="btn btn-primary detailbtncolor" asp-action="Details" asp-route-id="@item.Id">More Details</a>
            </div>
        </div>
    }

</body>
<style>
    .detailbtncolor {
        border-color: #9ab80b;
        background-color: #9ab80b;
        display: block;
        left: 50%;
    }
        .detailbtncolor:hover {
            border-color: #90ac0a;
            background-color: #90ac0a;
        }

    .textsize14{
        font-size: 14px;
        font-weight:bold;       
    }
    .textsize10 {
        font-size: 10px;        
    }
    .mycontainer {
        width: 100%;
       
    }

    .mycard {
        background:none;
        display: inline-block;
    }
</style>