@model IEnumerable<Shop_Project.Models.Game>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="mahtel.css">
    <h4 class="white">Games in stock</h4>
</head>


<p>
    <a class="btn dbtnc1 " asp-action="Create">Create a new product</a>
</p>
<body>
    
    @foreach (var item in Model)
    {
        <div class="card mycard" style="width:200px">

            <a href="@Url.Action("Details","Games",new { id = item.Id })">
                <img class="btn card-img-top" style="height:220px" src="@Html.DisplayFor(modelItem => item.Image)" alt="Card image">
            </a>
            <div class="card-body">
                <h4 class="card-title textsize14">@Html.DisplayFor(modelItem => item.Name)</h4>
                <p class="card-text textsize10"><b>@Html.DisplayFor(modelItem => item.Console.Name) ONLY!</b> </p>
                <br />
                <p class="card-text textsize12 text-center"><b>@Html.DisplayFor(modelItem => item.Price)</b></p>
                <a class="btn btn-primary btn-dark dbtnc" asp-action="Details" asp-route-id="@item.Id">More Details</a>
                <a class="btn btn-primary btn-dark dbtnc" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-primary btn-danger btn-dark dbtnc " asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }

</body>
<style>

    .detailbtncolor {
        border-color: #B7D153;
        background-color: #90ac0a;
        display: block;
        left: 50%;
    }

        .detailbtncolor:hover {
            border-color: #90ac0a;
            background-color: #B7D153;
            color: #000000;
        }

    .textsize14 {
        font-size: 14px;
        font-weight: bold;
    }

    .textsize10 {
        font-size: 10px;
    }

    .textsize12 {
        font-size: 12px;
    }

    .mycontainer {
        width: 100%;
    }

    .mycard {
        background: none;
        display: inline-block;
    }
</style>

<script src="~/js/index.js"></script>


